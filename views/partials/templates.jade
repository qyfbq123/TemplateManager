.row
  .col-md-6
    h4.text-center  最新模板
    dl.dl-horizontal
      header(ng-repeat-start = 'ts in sortedTemplates[1].templates')
      dt
        a(href='/template{{ts.id}}/') {{ts.name}}
      dd {{ts.description}}
      footer(ng-repeat-end)
  .col-md-6
    h4.text-center 最热模板
    dl.dl-horizontal
      header(ng-repeat-start = 'ts in sortedTemplates[0].templates')
      dt
        a(href='/template{{ts.id}}/') {{ts.name}}
      dd {{ts.description}}
      footer(ng-repeat-end)

.row
  table.table.col-md-12
    caption
      input.form-control(type='text', placeholder='Search in 10 templates...', autofocus, style='width:25%;')
    thead
      tr
        th 名称
        th 描述
        th 作者
        th 创建
        th 更新
    tbody
      tr(ng-repeat='item in pagedItems[currentPage]')
        td {{item.name}}
        td {{item.}}


