extends layout
block body
  .navbar.navbar-default.navbar-fixed-top(role='navigation')
    .container
      .navbar-header
        a.navbar-brand(href='/') 首页
      ul.nav.navbar-nav
      ul.nav.navbar-nav.navbar-right
        li
          a(href='/upload/') 上传模板
  .main
    .container(ng-controller = 'AppCtrl')
      .row
        .col-md-2
          input.form-control(type='search', placeholder='搜索')
          hr
          ul.nav.nav-pills.nav-stacked.submenu
            li(ng-repeat='item in categories')
              a(href='/subTemplates/{{item._id.category}}', ng-click='navClick($event);') {{item._id.category}}
                span.badge.badge-important {{item.count}}
        .col-md-10(ng-view)

  footer
    .container
      span 版权所有
          
  script(src = 'components/jquery/jquery.js')
  script(src = 'components/angular/angular.js')
  script(src = 'components/angular-route/angular-route.js')
  script(src = 'js/app.js')
  script(src = 'js/controllers.js')
  script(src = 'js/filters.js')
  script(src = 'js/util.js')
  script(src = 'bootstrap/js/bootstrap.js')
  script(src = 'components/angular-strap/dist/angular-strap.js')
